<Keybind>:
    text: self.bound_key_text
    on_press: self.send()
    size_hint: (.1, .1)


<NewBindDialogue>:
    bind_input: bind_input
    tab_back_box: tab_back_box
    tab_back: tab_back_box.active
    anchor_y: 'center'
    anchor_x: 'center'
    BoxLayout:
        size_hint: (.4, .5)
        padding: 10
        spacing: 5
        orientation: 'vertical'
        canvas:
            Color:
                rgba: [72/255, 82/255, 99/255, 1]
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            size_hint_y: .2
            text: 'Add New Keybinding'
        BoxLayout:
            orientation: 'vertical'
            spacing: 5
            size_hint_y: .6
            Label:
                text: 'Binding:'
            TextInput:
                id: bind_input
                on_text: root.update_bind(self.text)
            BoxLayout:
                Label:
                    text: 'Alt+Tab Back?'
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    CheckBox:
                        id: tab_back_box
        Label:
            id: error_msg
            size_hint_y: .2
            text: ''
            text_color: [1, 0, 0, 1]
        BoxLayout:
            spacing: 3
            size_hint_y: .2
            Button:
                text: 'Done'
                on_press: root.commit()
            Button:
                text: 'Cancel'
                on_press: root.cancel()


<SaveBindSet>:
    name_input: name_input
    anchor_y: 'center'
    anchor_x: 'center'
    BoxLayout:
        size_hint: (.4, .3)
        orientation: 'vertical'
        padding: 10
        spacing: 5
        canvas:
            Color:
                rgba: [72/255, 82/255, 99/255, 1]
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'File Name:'
        TextInput:
            id: name_input
        BoxLayout:
            spacing: 5
            Button:
                text: 'Save'
                on_press: root.commit()
            Button:
                text: 'Cancel'
                on_press: root.cancel()


<AppFrame>:
    btn_layout: btn_layout
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            id: menu
            size_hint_y: .1
            Button:
                text: 'Save'
                size_hint_x: .1
                on_press: root.new_save_dialogue()
            Button:
                size_hint_x: .25
                text: 'New Keybind'
                on_press: root.new_keybind_dialogue()
            FloatLayout:
        GridLayout:
            id: btn_layout
            cols: 5


