<Keybind>:
    on_press: self.send()
    size_hint: (.1, .1)

<InputWindowBox@BoxLayout>:
    size_hint_x: .4
    padding: 10
    spacing: 5
    orientation: 'vertical'
    canvas:
        Color:
            rgba: [72/255, 82/255, 99/255, 1]
        Rectangle:
            size: self.size
            pos: self.pos


<NewBinding>:
    tab_back_box: tab_back_box
    tab_back: tab_back_box.active
    anchor_x: 'center'
    anchor_y: 'center'
    InputWindowBox:
        size_hint_y: .4
        Label:
            size_hint_y: .1
            text: 'Add New Keybinding'
        BoxLayout:
            orientation: 'vertical'
            spacing: 5
            size_hint_y: .7
            Label:
                text: 'Name'
                size_hint_y: .25
            TextInput:
                on_text: root.update_binding_props(name=self.text)
            Label:
                text: 'Binding:'
                size_hint_y: .25
            TextInput:
                on_text: root.update_binding_props(binding=self.text)
            BoxLayout:
                Label:
                    text: 'Alt+Tab Back?'
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    CheckBox:
                        id: tab_back_box
        BoxLayout:
            spacing: 3
            size_hint_y: .2
            Button:
                text: 'Done'
                on_press: root.commit()
            Button:
                text: 'Cancel'
                on_press: root.cancel()


<NameBindSet>:
    name_input: name_input
    anchor_y: 'center'
    anchor_x: 'center'
    InputWindowBox:
        size_hint_y: .3
        Label:
            text: 'File Name:'
        TextInput:
            id: name_input
        BoxLayout:
            spacing: 5
            Button:
                text: root.mode
                on_press: root.commit()
            Button:
                text: 'Cancel'
                on_press: root.cancel()


<AppFrame>:
    btn_layout: btn_layout
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            id: menu
            size_hint_y: .1
            Button:
                text: 'Save'
                size_hint_x: .1
                on_press: root.name_bindset_dialogue()
            Button:
                text: 'Load'
                size_hint_x: .1
                on_press: root.name_bindset_dialogue('Load')
            Button:
                size_hint_x: .25
                text: 'New Keybind'
                on_press: root.new_keybind_dialogue()
            FloatLayout:
        GridLayout:
            id: btn_layout
            cols: 5


